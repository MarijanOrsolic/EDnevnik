<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/registerMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/DisplayNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unesite ime i prezime" />

        <EditText
            android:id="@+id/displayNameInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Unesite ime i prezime"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/emailTxt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unesite email " />

        <EditText
            android:id="@+id/emailInp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Unesite email adresu"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/passwordTxt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unesite lozinku" />

        <EditText
            android:id="@+id/passwordInp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Unesite lozinku"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/passwordCnfTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Potvrdite lozinku" />

        <EditText
            android:id="@+id/passwordCnfInp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Potvrdite lozinku"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/registerBtn1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Registriraj se" />

        <Button
            android:id="@+id/loginBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prijavi se" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>